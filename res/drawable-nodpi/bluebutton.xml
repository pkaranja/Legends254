<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
		<shape>
			<solid 
				android:color="#2b4170" />
			<stroke
				android:width="1dp" 
				android:color="#3b5999" />
		</shape>
	</item>
	<item>
	<shape>
		<gradient
				android:startColor="#3b5999"
				android:endColor="#2b4170"
				android:angle="270" />
		<stroke
				android:width="1dp"
				android:color="#2b4170" />
		</shape>
	</item>
</selector>